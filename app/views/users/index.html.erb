<div class="top-title-box row border border-bottom">
  <div class="container my-auto">
    <h4 class="top-title text-center font-italic"><b><em>ユーザー一覧</em></b></h4>
  </div>
</div>


  <div class="container">
    <div class="row">
      <% @users.each do |user| %>
        <div class="card mt-5 border-4 mx-auto" style="width: 20rem;">
          <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, fallback: "no-user-image.jpg", class: "card-img-top mt-3" %>
          <% end %>
            <div class="card-body">
              <p class="card-text h2"><%= link_to user.nickname, user_path(user) , class: "text-decoration-none" %></p>
              <p><%= link_to 'ユーザーページへ', user_path(user.id) %></p>
              <p>投稿数:<%= user.events.count %></p>
            </div>
        </div>
      <% end %>
    </div>
  </div>





