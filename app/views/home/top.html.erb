<div class="top-title-box row border border-bottom">
  <div class="container my-auto">
    <h2 class="top-title text-center">F R E E - O</h2>
  </div>
</div>

<% if user_signed_in? %>
  <div class="container my-auto">
    <h6 class="wellcome-coment rounded-pill text-center border border-2 border-success p-2 w-25 mx-auto mt-5"><b>よ う こ そ ！ ！ F R E E - O へ！</b></h6>
    <div class="d-grid gap-2 col-6 mx-auto  mt-4">
      <button class="btn1 rounded border border-light p-1 mt-5" type="button"><%= link_to 'イベントに参加', events_path , method: :get, class: "text-light text-decoration-none" %></button>
      <button class="btn1 rounded border border-light p-1 mt-2" type="button"><%= link_to 'イベントを主催', new_event_path , method: :get , class: "text-light text-decoration-none" %></button>
  </div>
<% else %>
  <div class="d-grid gap-2 col-6 mx-auto  mt-4">
    <button class="btn1 rounded border border-light p-1 mt-5" type="button"><%= link_to '新規登録', new_user_registration_path , method: :get, class: "text-light text-decoration-none" %></button>
    <button class="btn1 rounded border border-light p-1 mt-2" type="button"><%= link_to 'ログイン', new_user_session_path , method: :get , class: "text-light text-decoration-none" %></button>
  </div>
  </div>
<% end %>

<div class="main-image mt-5 container">
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="assets/home-image-1.png" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="assets/home-image-2.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="assets/home-image-3.jpg" class="d-block w-100" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"  data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"  data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
  </div>
</div>