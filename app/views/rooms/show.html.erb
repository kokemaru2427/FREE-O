<div class="user-in">
<% @invites.each do |e| %>
  <% if current_user.id != e.user_id %>
    <h3><strong><a href="/users/<%= e.user.id %>"><%= e.user.nickname %>さん</a></strong></h3>
  <% end %>
<% end %>
<p>とのチャットページ</p>
</div>

<div class="dmMain">
    <% @messages.each do |m| %>
        <% if current_user.id != m.user_id %>
          <strong><%= m.body %></strong>
          <small>(<%= m.user.nickname %>さん)</small><hr>
        <% else %>
          <strong><%= m.body %></strong>
          <small>(あなた)</small><hr>
        <% end %>
    <% end %>

    <%= form_for @message do |f| %>
    <%= f.text_field :body, :placeholder => "メッセージを入力して下さい" , :size => 100 %>
    <%= f.hidden_field :room_id, :value => @room.id %>
    <br>
    <%= f.submit "送信する" %>
    <% end %>
</div>

<%= link_to "ユーザー一覧に戻る", users_path %>


<style>
.user-in{
    text-align:center;
    border:1px solid darkgray;
    background-color:gainsboro;
}
.dmMain{
    padding:30px;
    border:1px solid darkgray;
    background-color:gainsboro;
}
</style>